<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/white"
    android:elevation="0dp"
    app:cardCornerRadius="@dimen/_8sdp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/bottomSection"
            android:orientation="vertical"
            android:padding="@dimen/_18sdp">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Student Name"
                        android:textColor="@color/blackTextColor"
                        android:textSize="@dimen/_12sdp"/>

                    <TextView
                        android:id="@+id/studentNameTextview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Student Name"
                        android:textColor="@color/blackTextColor"
                        android:textSize="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_8sdp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Matric Number"
                        android:textColor="@color/blackTextColor"
                        android:textSize="@dimen/_12sdp"
                        android:layout_marginTop="@dimen/_15sdp"/>

                    <TextView
                        android:id="@+id/matricNumberTextview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Matric Number"
                        android:textColor="@color/blackTextColor"
                        android:textSize="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_8sdp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="email"
                        android:textColor="@color/blackTextColor"
                        android:textSize="@dimen/_12sdp"
                        android:layout_marginTop="@dimen/_15sdp"/>

                    <TextView
                        android:id="@+id/emailTextview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email"
                        android:textColor="@color/blackTextColor"
                        android:textSize="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_8sdp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Faculty"
                        android:textColor="@color/blackTextColor"
                        android:textSize="@dimen/_12sdp"
                        android:layout_marginTop="@dimen/_15sdp"/>

                    <TextView
                        android:id="@+id/facultyTextview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Faculty"
                        android:textColor="@color/blackTextColor"
                        android:textSize="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_8sdp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Date"
                        android:textColor="@color/blackTextColor"
                        android:textSize="@dimen/_12sdp"
                        android:layout_marginTop="@dimen/_15sdp"/>

                    <TextView
                        android:id="@+id/dateTextview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Date"
                        android:textColor="@color/blackTextColor"
                        android:textSize="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_8sdp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Time"
                        android:textColor="@color/blackTextColor"
                        android:textSize="@dimen/_12sdp"
                        android:layout_marginTop="@dimen/_15sdp"/>

                    <TextView
                        android:id="@+id/timeTextview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Time"
                        android:textColor="@color/blackTextColor"
                        android:textSize="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_8sdp"/>

                </LinearLayout>

            </ScrollView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottomSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/_15sdp">

            <LinearLayout
                android:id="@+id/actionSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="14"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/approveButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:text="Approve"
                    android:textSize="@dimen/_18sdp"
                    android:textColor="@color/blackTextColor"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:padding="@dimen/_12sdp"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#C8C8C8"/>

                <TextView
                    android:id="@+id/rejectTextview"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:text="Reject"
                    android:textSize="@dimen/_18sdp"
                    android:textColor="@color/blackTextColor"
                    android:gravity="center"
                    android:padding="@dimen/_12sdp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/rejectSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="14"
                android:orientation="vertical"
                android:padding="@dimen/_18sdp"
                android:visibility="gone">

                <EditText
                    android:id="@+id/rejectionReasonEdittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Rejection Reason"
                    android:textColor="@color/blackTextColor"
                    android:background="@null"
                    android:textSize="@dimen/_15sdp"
                    android:inputType="textMultiLine"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/rejectButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Reject"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_15sdp"
                    android:backgroundTint="#FF0000"
                    app:cornerRadius="@dimen/_8sdp"
                    android:padding="@dimen/_15sdp"
                    android:insetTop="0dp"
                    android:insetRight="0dp"
                    android:insetLeft="0dp"
                    android:insetBottom="0dp"
                    android:layout_marginTop="@dimen/_15sdp"/>

            </LinearLayout>

        </LinearLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>