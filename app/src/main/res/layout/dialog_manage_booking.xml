<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/white"
    android:elevation="0dp"
    app:cardCornerRadius="@dimen/_8sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/_18sdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Student Name"
                    android:textColor="@color/blackTextColor"
                    android:textSize="@dimen/_12sdp"/>

                <TextView
                    android:id="@+id/studentNameTextview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Student Name"
                    android:textColor="@color/blackTextColor"
                    android:textSize="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_8sdp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gender"
                    android:textColor="@color/blackTextColor"
                    android:textSize="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_15sdp"/>

                <TextView
                    android:id="@+id/genderTextview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gender"
                    android:textColor="@color/blackTextColor"
                    android:textSize="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_8sdp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Race"
                    android:textColor="@color/blackTextColor"
                    android:textSize="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_15sdp"/>

                <TextView
                    android:id="@+id/raceTextview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Race"
                    android:textColor="@color/blackTextColor"
                    android:textSize="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_8sdp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Matric Number"
                    android:textColor="@color/blackTextColor"
                    android:textSize="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_15sdp"/>

                <TextView
                    android:id="@+id/matricNumberTextview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Matric Number"
                    android:textColor="@color/blackTextColor"
                    android:textSize="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_8sdp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="email"
                    android:textColor="@color/blackTextColor"
                    android:textSize="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_15sdp"/>

                <TextView
                    android:id="@+id/emailTextview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:textColor="@color/blackTextColor"
                    android:textSize="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_8sdp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Faculty"
                    android:textColor="@color/blackTextColor"
                    android:textSize="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_15sdp"/>

                <TextView
                    android:id="@+id/facultyTextview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Faculty"
                    android:textColor="@color/blackTextColor"
                    android:textSize="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_8sdp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Course"
                    android:textColor="@color/blackTextColor"
                    android:textSize="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_15sdp"/>

                <TextView
                    android:id="@+id/courseTextview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Course"
                    android:textColor="@color/blackTextColor"
                    android:textSize="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_8sdp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Year"
                    android:textColor="@color/blackTextColor"
                    android:textSize="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_15sdp"/>

                <TextView
                    android:id="@+id/yearTextview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Year"
                    android:textColor="@color/blackTextColor"
                    android:textSize="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_8sdp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Housing Type"
                    android:textColor="@color/blackTextColor"
                    android:textSize="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_15sdp"/>

                <TextView
                    android:id="@+id/housingTypeTextview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Housing Type"
                    android:textColor="@color/blackTextColor"
                    android:textSize="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_8sdp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Duration of Stay"
                    android:textColor="@color/blackTextColor"
                    android:textSize="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_15sdp"/>

                <TextView
                    android:id="@+id/durationTextview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Duration of Stay"
                    android:textColor="@color/blackTextColor"
                    android:textSize="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_8sdp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Payment Status"
                    android:textColor="@color/blackTextColor"
                    android:textSize="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_15sdp"/>

                <TextView
                    android:id="@+id/paymentStatusTextview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Payment Status"
                    android:textColor="@color/blackTextColor"
                    android:textSize="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_8sdp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Booking Status"
                    android:textColor="@color/blackTextColor"
                    android:textSize="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_15sdp"/>

                <TextView
                    android:id="@+id/bookingStatusTextview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Booking Status"
                    android:textColor="@color/blackTextColor"
                    android:textSize="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_8sdp"/>

                <LinearLayout
                    android:id="@+id/noteTextSection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/_15sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Note"
                        android:textColor="@color/blackTextColor"
                        android:textSize="@dimen/_12sdp"/>

                    <TextView
                        android:id="@+id/noteTextview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Note"
                        android:textColor="@color/blackTextColor"
                        android:textSize="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_8sdp"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/bottomSection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/_15sdp">

                    <LinearLayout
                        android:id="@+id/actionSection"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="14"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/approveButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="7"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackground"
                            android:text="Approve"
                            android:textSize="@dimen/_18sdp"
                            android:textColor="@color/blackTextColor"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:padding="@dimen/_12sdp"/>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="#C8C8C8"/>

                        <TextView
                            android:id="@+id/rejectButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="7"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackground"
                            android:text="Reject"
                            android:textSize="@dimen/_18sdp"
                            android:textColor="@color/blackTextColor"
                            android:gravity="center"
                            android:padding="@dimen/_12sdp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/noteSection"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="14"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <EditText
                            android:id="@+id/noteEdittext"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Note"
                            android:textColor="@color/blackTextColor"
                            android:background="@null"
                            android:textSize="@dimen/_15sdp"
                            android:inputType="textMultiLine"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/submitButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Submit"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_15sdp"
                            android:backgroundTint="#FF0000"
                            app:cornerRadius="@dimen/_8sdp"
                            android:padding="@dimen/_15sdp"
                            android:insetTop="0dp"
                            android:insetRight="0dp"
                            android:insetLeft="0dp"
                            android:insetBottom="0dp"
                            android:layout_marginTop="@dimen/_15sdp"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</androidx.cardview.widget.CardView>